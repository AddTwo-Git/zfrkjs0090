<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Popover
        id="PO_Tag"
        showHeader="false"
        contentWidth="400px"
        contentHeight="300px"
        placement="Left"
        resizable="true"
    >
        <NavContainer id="navCon02">
            <Page
                id="master02"
                title="{i18n>TripTagListTitle} {viewModel>/TripUserList/length} {i18n>detail_list_title}"
            >
                <List items="{viewModel>/TagList/Items}">
                    <CustomListItem
                        type="Navigation"
                        press=".onPAI"
                        app:fcCode="fcNavDetail"
                    >
                        <HBox
                            width="100%"
                            alignItems="Center"
                            class="sapUiTinyMarginBeginEnd"
                        >
                            <VBox
                                width="15rem"
                                class="sapUiTinyMarginTopBottom"
                            >
                                <Title text="{viewModel>Name}" />
                                <Text text="{viewModel>Description}" />
                            </VBox>
                        </HBox>
                    </CustomListItem>
                </List>
            </Page>
            <Page
                id="detail"
                class="sapUiResponsivePadding--header"
                showNavButton="true"
                navButtonPress=".onPAI"
                app:fcCode="fcNavBack"
                title="{i18n>TripTagDetailTitle}"
            >
                <content>
                    <HBox
                        width="100%"
                        alignItems="Center"
                        class="sapUiTinyMarginBeginEnd"
                    >
                        <VBox
                            width="100%"
                            direction="Column"
                            class="sapUiTinyMarginEnd"
                        >
                            <HBox
                                width="100%"
                                alignItems="Center"
                                renderType="Bare"
                                class="sapUiTinyMarginTopBottom"
                            >
                                <Label
                                    showColon="true"
                                    width="60px"
                                    design="Bold"
                                    text="{i18n>detail_list_TripName}"
                                />
                                <Text
                                    width="10rem"
                                    text="{viewModel>/TagList/DetailItems/0/Name}"
                                />
                            </HBox>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                renderType="Bare"
                                class="sapUiTinyMarginTopBottom"
                            >
                                <Label
                                    showColon="true"
                                    width="60px"
                                    design="Bold"
                                    text="{i18n>detail_list_Description}"
                                />
                                <Text
                                    width="200px"
                                    text="{viewModel>/TagList/DetailItems/0/Description}"
                                    tooltip="{viewModel>/TagList/DetailItems/0/Description}"
                                    maxLines="1"
                                />
                            </HBox>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                renderType="Bare"
                                class="sapUiTinyMarginTopBottom"
                            >
                                <Label
                                    showColon="true"
                                    width="60px"
                                    design="Bold"
                                    text="{i18n>detail_list_StartsAt}"
                                />
                                <Text
                                    width="10rem"
                                    text="{
                                        path: 'viewModel>/TagList/DetailItems/0/StartsAt',
                                        formatter: '.formatter.formatDate'
                                    }"
                                />
                            </HBox>
                            <HBox
                                width="100%"
                                alignItems="Center"
                                renderType="Bare"
                                class="sapUiTinyMarginTopBottom"
                            >
                                <Label
                                    showColon="true"
                                    width="60px"
                                    design="Bold"
                                    text="{i18n>detail_list_EndsAt}"
                                />
                                <Text
                                    width="10rem"
                                    text="{
                                        path: 'viewModel>/TagList/DetailItems/0/EndsAt',
                                        formatter: '.formatter.formatDate'
                                    }"
                                />
                            </HBox>
                        </VBox>
                    </HBox>
                </content>
            </Page>
        </NavContainer>
    </Popover>
</core:FragmentDefinition>
