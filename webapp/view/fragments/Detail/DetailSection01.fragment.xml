<core:FragmentDefinition
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <uxap:ObjectPageSection
        showTitle="false"
        title="{i18n>detail_list_sectionLbl001}"
        titleUppercase="false"
    >
        <uxap:subSections>
            <uxap:ObjectPageSubSection>
                <VBox>
                    <form:SimpleForm
                        editable="true"
                        layout="ResponsiveGridLayout"
                    >
                        <form:content>
                            <HBox width="100%">
                                <VBox
                                    width="100%"
                                    direction="Column"
                                    class="sapUiTinyMarginEnd"
                                >
                                    <!-- 이름 -->
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_UserName}"
                                        />
                                        <Text
                                            text="{
                                                parts: [
                                                    'viewModel>/DetailData/FirstName',
                                                    'viewModel>/DetailData/MiddleName',
                                                    'viewModel>/DetailData/LastName'
                                                ]
                                            }"
                                        />
                                    </HBox>
                                    <!-- 성별 -->
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_Gender}"
                                        />
                                        <Text
                                            width="10rem"
                                            text="{viewModel>/DetailData/Gender}"
                                        />
                                    </HBox>
                                    <!-- 나이 -->
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_Age}"
                                        />
                                        <Text
                                            width="10rem"
                                            text="{= ${viewModel>/DetailData/Age} === null ? 'Secret' : ${viewModel>/DetailData/Age} }"
                                        />
                                    </HBox>
                                </VBox>
                                <VBox
                                    width="100%"
                                    direction="Column"
                                    class="sapUiTinyMarginEnd"
                                >
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_Emails}"
                                        />
                                        <Text
                                            width="12rem"
                                            text="{
                                                parts: [
                                                    { path: 'viewModel>/DetailData/Emails/0' },
                                                    { path: 'viewModel>/DetailData/Emails/1' }
                                                ],
                                                formatter: '.formatter.formatEmails'
                                            }"
                                        />
                                    </HBox>
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_Address}"
                                        />
                                        <Text
                                            width="12rem"
                                            text="{viewModel>/DetailData/AddressInfo/0/Address}"
                                        />
                                    </HBox>
                                </VBox>
                                <VBox
                                    width="100%"
                                    direction="Column"
                                    class="sapUiTinyMarginEnd"
                                >
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_CityCountryRegion}"
                                        />
                                        <Text
                                            width="10rem"
                                            text="{viewModel>/DetailData/AddressInfo/0/City/CountryRegion}"
                                        />
                                    </HBox>
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_CityName}"
                                        />
                                        <Text
                                            width="10rem"
                                            text="{viewModel>/DetailData/AddressInfo/0/City/Name}"
                                        />
                                    </HBox>
                                    <HBox
                                        width="100%"
                                        alignItems="Center"
                                    >
                                        <Label
                                            showColon="true"
                                            width="6rem"
                                            text="{i18n>detail_list_CityRegion}"
                                        />
                                        <Text
                                            width="10rem"
                                            text="{viewModel>/DetailData/AddressInfo/0/City/Region}"
                                        />
                                    </HBox>
                                </VBox>
                            </HBox>
                        </form:content>
                    </form:SimpleForm>
                </VBox>
            </uxap:ObjectPageSubSection>
        </uxap:subSections>
    </uxap:ObjectPageSection>
</core:FragmentDefinition>
